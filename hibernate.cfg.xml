<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
   <session-factory>
   <property name="hibernate.dialect">
      org.hibernate.dialect.MySQLDialect
   </property>
   <property name="hibernate.connection.driver_class">
      com.mysql.jdbc.Driver
   </property>

   <property name="hibernate.connection.url">
      jdbc:mysql://localhost/plataformaschoology
   </property>
   <property name="hibernate.connection.username">
      root
   </property>
   <property name="hibernate.connection.password">
     password
   </property>
   
   
   
   <mapping class="mx.itson.disenosoftware.plataformaschoology.entidad.Curso"/>
   <mapping class="mx.itson.disenosoftware.plataformaschoology.entidad.Asignacion"/>
   <mapping class="mx.itson.disenosoftware.plataformaschoology.entidad.Entrega"/>
   <mapping class="mx.itson.disenosoftware.plataformaschoology.entidad.Usuario"/>
   
   
</session-factory>
</hibernate-configuration>